      #navbarwrapper
        nav.navbar.navbar-inverse.navigation-clean
          .container-fluid
            .navbar-header
              a.navbar-brand.navbar-link(href='index.html')
                span Zannoudi
              button.navbar-toggle.collapsed(data-toggle='collapse', data-target='#navcol-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            #navcol-1.collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li(role='presentation')
                  a(href='index.html')= Home
                li.dropdown
                  a.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', href='tolk.html')= Tolk
                    span.caret
                  ul.dropdown-menu(role='menu')
                    li(role='presentation')
                      a(href= beedigdtolkLink)= BeedigdTolk
                    li(role='presentation')
                      a(href= specdienstLink)= SpecDienst
                    li(role='presentation')
                      a(href= downloadsLink)= Downloads
                li(role='presentation')
                  a(href= referentielink)= Referentie
                li.active(role='presentation')
                  a(href= cursuslink)= Stages
                li(role='presentation')
                  a(href= contactlink)= Contact
                li.dropdown
                  a.dropdown-toggle.hidden-sm.hidden-md.hidden-lg(data-toggle='dropdown', aria-expanded='false', href='#')= Taal
                    span.caret
                  ul.dropdown-menu(role='menu')
                    li.livlag.NL(role='presentation')
                      a(href= HomeKnop) NL
                    li.livlag.GB(role='presentation')
                      a(href= HomeGBknop) GB
                    li.livlag.FR(role='presentation')
                      a(href= HomeFRknop) FR
                    li.livlag.AR(role='presentation')
                      a(href= HomeARknop) AR
